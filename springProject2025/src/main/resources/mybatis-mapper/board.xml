<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springProject2025.mapper.BoardMapper">

	<!-- 게시판 목록 조회 -->
	<select id="boardList" parameterType="hashmap" resultType="com.example.springProject2025.model.Board">
	    SELECT *
	    FROM BOARD
	    WHERE 1=1
	    <!-- Apply type filter only if a type is selected -->
	    <if test="type != null and type != ''">
	        AND TYPE = #{type}
	    </if>
	    <!-- Apply keyword filter if keyword is not empty -->
	    <if test="keyword != null and keyword != ''">
	        AND (
	            TITLE LIKE '%' || #{keyword} || '%'
	            OR USER_ID LIKE '%' || #{keyword} || '%'
	        )
	    </if>
	    ORDER BY CDATE DESC
	    OFFSET #{page} ROWS FETCH NEXT #{pageSize} ROWS ONLY
	</select>
	
	<!-- 게시판 총 개수 조회 (pagination) -->
	<select id="boardCnt" parameterType="hashmap" resultType="int">
	    SELECT COUNT(*) AS CNT
	    FROM BOARD
	    WHERE 1=1
	    <if test="type != null and type != ''">
	        AND TYPE = #{type}
	    </if>
	    <if test="keyword != null and keyword != ''">
	        AND (
	            TITLE LIKE '%' || #{keyword} || '%'
	            OR USER_ID LIKE '%' || #{keyword} || '%'
	        )
	    </if>
	</select>
	
</mapper>