<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springProject2025.mapper.MemberMapper">

	<insert id="userSignup" parameterType="hashmap">
		INSERT INTO USERS (USER_ID, PWD, NAME, NICKNAME, GENDER, EMAIL, ADDR, PHONE, CDATE, UDATE, USERTYPE, BIRTH)
		VALUES(#{userId}, #{pwd}, #{name}, #{nickname}, #{gender}, #{email}, #{addr}, #{phone}, SYSDATE, SYSDATE, 'U', #{birthday})
	</insert>
	
	<select id="idCheck" parameterType="hashmap" resultType="com.example.springProject2025.model.User">
		SELECT *
		FROM USERS
		WHERE USER_ID = #{userId}
	</select>
	
	<select id="nicknameCheck" parameterType="hashmap" resultType="com.example.springProject2025.model.User">
		SELECT *
		FROM USERS
		WHERE NICKNAME = #{nickname}
	</select>
	
</mapper>